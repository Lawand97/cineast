{
  "database": {
    "host": "localhost",
    "selector": "COTTONTAIL",
    "writer": "COTTONTAIL",
    "port": 1865,
    "plaintext": true
  },
  "benchmark": {
    "mode": "OFF",
    "path": "benchmarks"
  },
  "retriever": {
    "threadPoolSize": 2,
    "maxResults": 10000,
    "resultsPerModule": 5000,
    "features": {
      "globalcolor": [
        {"feature": "AverageColor",  "weight": 1.8},
        {"feature": "MedianColor", "weight": 1.2},
        {"feature": "AverageFuzzyHist", "weight": 0.7},
        {"feature": "HueHistogram", "weight": 0.7},
        {"feature": "MedianFuzzyHist",   "weight": 1.3 }
      ],
      "localcolor": [
        {"feature": "AverageColorARP44", "weight": 0.5}
      ],
      "edge": [
        {"feature": "EHD", "weight": 0.7},
        {"feature": "DominantEdgeGrid16", "weight": 1.4},
        {"feature": "DominantEdgeGrid8", "weight": 1.4}
      ],
	"boolean": [
        {
          "feature": "RangeBooleanRetriever", "weight": 1.0,
          "properties": {
            "entity": "test_table",
            "attribute": "domain,key,value"
          }
	},
	{
          "feature": "RangeBooleanRetriever", "weight": 1.0,
          "properties": {
            "entity": "him_table",
            "attribute": "sex,localization,age,dx,dx_type"
          }
	}
	]
    }
  },

  "decoders": {
    "VIDEO": {
      "decoder": "FFMpegVideoDecoder",
      "properties": {
        "maxFrameWidth": 640,
        "maxFrameHeight": 480
      }
    },
    "IMAGE": {
      "decoder": "DefaultImageDecoder",
      "properties": {
        "bounds": 1024
      }
    },
    "AUDIO": {
      "decoder": "FFMpegAudioDecoder",
      "properties": {
        "samplerate": 44100,
        "channels": 2
      }
    }
  },

  "extractor": {
    "threadPoolSize": 4,
    "outputLocation": "out"
  },

  "api": {
    "enableCLI": true,
    "enableWebsocket": true,
    "enableWebsocketSecure": false,
    "enableRest": true,
    "enableRestLiveDoc": true,
    "enableRestSecure": false,
    "enableLegacy": false,
    "enableLiveDoc": true,
    "httpPort": 4567,
    "httpsPort": 4568,
    "legacyPort": 12345,
    "threadPoolSize": 12,
    "serveContent": true,
    "serveUI": false,
    "uiLocation": "../vitrivr-ng/dist",
    "thumbnailLocation": "thumbnails",
    "objectLocation": "objects",
    "objectsFilesAreIDed": true,
    "maxMessageSize": 900000000
  },

  "monitoring":{
    "enablePrometheus": false,
    "prometheusPort": 4569
  }

}
